<div class="container bg">

	<div class="row">
		<div class="center header col-lg-12 col-sm-12">
			<img src="/img/burger.png" alt="Eat-Da-Burger App" class="burgerImg">
			<h1>Eat-Da-Burger App</h1>
		</div>
	</div>
	<div class="row">
		<div class= "col-lg-6 col-sm-12 ">
			<ul>
				{{#each burgers}}
					{{#unless devoured}}
						
							{{> burger/burger-block devoured=false}}
						
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	</div>
	
	<h2>These burgers were so filling!</h2>
		<div class= "col-lg-6 col-sm-12 ">
			<ul>
				{{#each burgers}}
					{{#if devoured}}
						{{> burger/burger-block devoured=true}}
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
	
	<div class="row">
		<div class="center col-sm-12">
			<h2>Add a Burger</h2>
			<form class="create-form">

				<div class="form-group">
					<label for="nom">Burger Name:</label>
					<input type="text" id="nom" name="name">
				</div>

				<button type="submit">Add Burger</button>
			</form>
		</div>
	</div>
</div>